<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resources/css/styleniveles.css">
    <title>Mi Aplicación</title>
</head>
<body>

    <nav class="navbar">
        <div class="navbar-content">
            <h2>Bienvenido, <span id="username">Usuario</span> de <span id="userSchool">Colegio</span></h2>
            <button id="cargarUsuarios">Cargar Usuarios</button>
        </div>
    </nav>

    <div class="main-container">
        <div class="levels-container">
            <div class="level-card">
                <h3>Nivel 1</h3>
                <img src="resources/images/nivel1.png" alt="Nivel 1" class="level-image">
                <p>Descripción del nivel 1</p>
                <a href="/actividad/seleccionar-sala" class="button">Ingresar</a>
            </div>
            <div class="level-card">
                <h3>Nivel 2</h3>
                <img src="resources/images/nivel2.png" alt="Nivel 2" class="level-image">
                <p>Descripción del nivel 2</p>
                <button>Ingresar</button>
            </div>
            <div class="level-card">
                <h3>Nivel 3</h3>
                <img src="resources/images/nivel3.png" alt="Nivel 3" class="level-image">
                <p>Descripción del nivel 3</p>
                <button>Ingresar</button>
            </div>
        </div>
    </div>

    <script>
        console.log('Script iniciado');
    
        // Función para obtener la información del usuario del localStorage
        const getUserInfo = () => {
            const userInfo = localStorage.getItem('userInfo');
            return userInfo ? JSON.parse(userInfo) : null;
        };
    
        // Función para mostrar la información del usuario en el navbar
        const displayUserInfo = () => {
            const userInfoString = localStorage.getItem('userInfo');
            console.log('UserInfo en localStorage:', userInfoString);
            if (userInfoString) {
                const userInfo = JSON.parse(userInfoString);
                console.log('UserInfo parseado:', userInfo);

                document.getElementById('username').textContent = userInfo.nombre || 'Usuario';
                document.getElementById('userSchool').textContent = userInfo.establecimiento || 'Colegio';
            } else {
                console.log('No se encontró información del usuario en localStorage');
            }
            const userInfo = getUserInfo();
            if (userInfo) {
                document.getElementById('username').textContent = userInfo.nombre || 'Usuario';
                document.getElementById('userSchool').textContent = userInfo.establecimiento || 'Colegio';
            }
        };
    
        const getUsuarios = async () => {
            console.log('Iniciando getUsuarios');
            try {
                const token = localStorage.getItem('token'); // Obtener el token de autenticación
                console.log('Haciendo fetch a http://localhost:3001/api/usuarios');
                const response = await fetch('http://localhost:3001/api/usuarios', {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}` // Incluir el token en el header
                    },
                    mode: 'cors'
                });
    
                console.log('Respuesta recibida:', response);
    
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
    
                const usuarios = await response.json();
                console.log('Usuarios obtenidos:', usuarios);
                return usuarios;
            } catch (error) {
                console.error('Error en getUsuarios:', error);
                throw error;
            }
        };
    
        document.addEventListener('DOMContentLoaded', () => {
            console.log('DOMContentLoaded evento disparado');
    
            // Mostrar la información del usuario al cargar la página
            displayUserInfo();
    
            document.getElementById('cargarUsuarios').addEventListener('click', () => {
                console.log('Botón cargarUsuarios clickeado');
                getUsuarios()
                    .then(usuarios => {
                        console.log('Datos de usuarios recibidos:', usuarios);
                    })
                    .catch(error => {
                        console.error('Error al cargar usuarios:', error);
                    });
            });
        });
    </script>

</body>
</html>